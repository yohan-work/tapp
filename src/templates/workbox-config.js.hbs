      handler: 'NetworkFirst',
      options: {
        cacheName: 'api',
        expiration: {
          maxEntries: 50,
          maxAgeSeconds: 60 * 5 // 5분
        },
        networkTimeoutSeconds: 10
      }
    }
  ],
  
  // 오프라인 폴백
  navigateFallback: '/offline.html',
  navigateFallbackDenylist: [
    /^\/_/,
    /\/[^/?]+\.[^/]+$/
  ]
};

